<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jahanwalsh.justlyrics.ui.ArtistDetailFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="402dp"
        android:layout_height="600dp">


        <TextView
            android:id="@+id/lyricTextView"
            android:layout_width="0dp"
            android:layout_height="490dp"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintHorizontal_bias="0.0"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/saveArtistButton"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="11dp" />

        <Button
            android:id="@+id/saveArtistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            android:text="Save a snapshot of these lyrics!"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />


    </android.support.constraint.ConstraintLayout>


</FrameLayout>
